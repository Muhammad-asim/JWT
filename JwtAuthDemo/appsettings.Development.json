{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {

    "Key": "ThisIsASecretKeyForJwtTokenGeneration",
    "Issuer": "JwtAuthDemo",
    "Audience": "JwtAuthDemoUsers",
    "ExpireMinutes": 60,
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "TokenValidationParameters": {
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    },
    "ClockSkewMinutes": 5,
    "RefreshTokenDays": 7,
    "AccessTokenMinutes": 5
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=Your-Server;Database=JwtIdentityDb;User Id=YourUserId;Password=YourPassword;Trusted_Connection=false;TrustServerCertificate=True"
  }
}
